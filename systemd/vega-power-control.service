[Unit]
Description=AMD Power Control

[Service]
RemainAfterExit=yes
ExecStart=/usr/local/bin/vega-power-control manual
ExecStop=/usr/local/bin/vega-power-control auto


[Install]
WantedBy=multi-user.target
